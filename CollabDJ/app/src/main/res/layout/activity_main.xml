                android:layout_alignBottom="@+id/ivSharedSongs"
                android:layout_alignTop="@+id/ivSharedSongs"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvSharedSongs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/sharedSongsShim"
                android:layout_toRightOf="@+id/sharedSongsShim"
                android:text="@string/shared_songs"
                android:textAlignment="center" />

        </RelativeLayout>

