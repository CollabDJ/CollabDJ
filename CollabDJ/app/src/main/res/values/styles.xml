<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightsBackground">
        <item name="android:background">@drawable/bg_lights</item>
        <item name="android:foreground">@drawable/bg_gradient</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Theme used to customize the drawer items -->
    <style name="DrawerTheme">
        <item name="android:textSize">18sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">50dp</item><!-- menu item height-->
        <!-- <item name="colorControlHighlight">@android:color/transparent</item> -->
    </style>

</resources>
